{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ursa Markup",
  "version": "1.0.0-2",
  "identifier": "com.basicallypolaris.ursamarkup",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Ursa Markup",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; style-src 'self' 'unsafe-inline';"
    }
  },
  "plugins": {
    "cli": {
      "description": "Ursa Markup - Image annotation tool",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "multiple": true,
          "description": "Image file paths to open"
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "fileAssociations": [
      {
        "ext": ["png", "jpg", "jpeg", "webp", "gif"],
        "name": "Image",
        "role": "Editor"
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
