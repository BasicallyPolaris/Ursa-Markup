{
  "$schema": "../../../gen/schemas/desktop-schema.json",
  "identifier": "omnimark:default",
  "description": "Default permissions for OmniMark",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-size",
    "core:window:allow-set-title",
    "cli:default",
    "cli:allow-cli-matches",
    "opener:default",
    "clipboard-manager:allow-write-image",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{"path": "$HOME/**"}]
    },
    "fs:allow-write-file",
    "fs:allow-home-read",
    "fs:allow-home-write",
    "fs:scope-download-recursive",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-keys",
    "store:allow-values",
    "store:allow-entries",
    "store:allow-length",
    "store:allow-load"
  ],
  "commands": {
    "allow": [
      "get_pending_file",
      "copy_image_wayland"
    ]
  }
}
