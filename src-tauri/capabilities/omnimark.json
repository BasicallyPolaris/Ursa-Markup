{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "omnimark:default",
  "description": "Default permissions for OmniMark",
  "windows": ["main", "settings"],
  "permissions": [
    "core:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-set-size",
    "core:window:allow-set-title",
    "core:window:allow-set-focus",
    "core:window:allow-center",
    "core:webview:default",
    "core:webview:allow-create-webview-window",
    "core:event:default",
    "clipboard-manager:allow-read-image",
    "clipboard-manager:allow-write-image",
    "cli:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "store:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPCONFIG/theme.json"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$APPCONFIG/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$APPCONFIG/**" }]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "$RESOURCE/**" }, { "path": "$APPCONFIG/**" }]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [{ "path": "$APPCONFIG/**" }]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPCONFIG" },
        { "path": "$APPCONFIG/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$APPCONFIG" }, { "path": "$APPCONFIG/**" }]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [{ "path": "$APPCONFIG" }, { "path": "$APPCONFIG/**" }]
    }
  ],
  "commands": {
    "allow": ["get_pending_file", "queue_clipboard_copy_base64"]
  }
}
